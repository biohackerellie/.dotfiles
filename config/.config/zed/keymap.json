// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-h": "project_panel::ToggleFocus",
      "alt-h": "buffer_search::Deploy",
      "ctrl-n": "workspace::ToggleZoom",
      "space g g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "!Editor && !Terminal",
    "bindings": {
      "ctrl-l": "editor::ToggleFocus"
    }
  },
  {
    "context": "Editor && mode  == full",
    "bindings": {
      "alt-h": ["buffer_search::Deploy", { "replace_enabled": true }]
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space f f": "file_finder::Toggle",
      "space b d": "pane::CloseActiveItem",
      "space b shift-d": "pane::CloseOtherItems",
      "ctrl-h": "project_panel::ToggleFocus",
      "alt-h": "buffer_search::Deploy",
      "g c": "editor::ToggleComments",
      "space c a": "editor::ToggleCodeActions",
      "space c d": "editor::ToggleDiagnostics",
      "space p": "terminal_panel::Toggle"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "g c": "editor::ToggleComments"
    }
  }
]
